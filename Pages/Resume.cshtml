@page
@model MyPortfolio.Pages.ResumeModel

@{
    // Sample skills data based on your PDF resume (extracted and organized). You can move this to your Model or a service.
    var skills = new List<(string Name, int Percentage, string ColorClass)> {
        ("C#", 95, "bg-success"),
        (".NET", 95, "bg-success"),
        ("JavaScript", 85, "bg-info"),
        ("C++", 70, "bg-info"),
        ("Python", 75, "bg-info"),
        ("ASP.NET", 90, "bg-primary"),
        ("Angular", 80, "bg-primary"),
        ("React", 85, "bg-primary"),
        ("HTML/CSS", 80, "bg-primary"),
        ("SQL/T-SQL", 90, "bg-warning"),
        ("MSSQL", 90, "bg-warning"),
        ("MySQL", 80, "bg-warning"),
        ("PostgreSQL", 75, "bg-warning"),
        ("Redis", 70, "bg-warning"),
        ("Microservices Architecture", 90, "bg-danger"),
        ("TDD/BDD/DDD", 85, "bg-danger"),
        ("Git/SVN", 85, "bg-secondary")
    };

    // Split skills into two columns for balanced distribution
    int half = (int)Math.Ceiling(skills.Count / 2.0);
    var column1 = skills.Take(half);
    var column2 = skills.Skip(half);
}

<style>
    /* Fade-in animation for the container */
    .fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Hover scale effect */
    .skill-item {
        transition: transform 0.2s ease;
    }

        .skill-item:hover {
            transform: scale(1.02);
        }

    /* Improved shine animation: a moving gradient shine on the progress bar */
    .progress-bar-shine {
        position: relative;
        overflow: hidden;
    }

        .progress-bar-shine::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 200%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            animation: shine 1.5s infinite;
            transition: opacity 0.3s;
        }

        .progress-bar-shine:hover::before {
            animation: shine 1s infinite;
        }

    @@keyframes shine {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }
</style>

<div class="container d-flex flex-column justify-content-start align-items-center text-center fade-in" style="padding: 5px; font-size: 1rem;">
    <h5 class="mb-3 text-primary">Technologies & Skills </h5>
    <div class="row justify-content-center w-100">
        <div class="col-md-6">
            @foreach (var skill in column1)
            {
                <div class="mb-2 d-flex align-items-center skill-item" style="cursor: pointer;">
                    <span class="me-2" style="min-width: 150px; text-align: left;">@skill.Name</span>
                    <div class="progress flex-grow-1" style="height: 10px; border-radius: 5px; background-color: #e9ecef;">
                        <div class="progress-bar @skill.ColorClass progress-bar-shine" role="progressbar" style="width: @skill.Percentage%; transition: width 0.6s ease;" aria-valuenow="@skill.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <span class="ms-2">@skill.Percentage%</span>
                </div>
            }
        </div>
        <div class="col-md-6">
            @foreach (var skill in column2)
            {
                <div class="mb-2 d-flex align-items-center skill-item" style="cursor: pointer;">
                    <span class="me-2" style="min-width: 150px; text-align: left;">@skill.Name</span>
                    <div class="progress flex-grow-1" style="height: 10px; border-radius: 5px; background-color: #e9ecef;">
                        <div class="progress-bar @skill.ColorClass progress-bar-shine" role="progressbar" style="width: @skill.Percentage%; transition: width 0.6s ease;" aria-valuenow="@skill.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <span class="ms-2">@skill.Percentage%</span>
                </div>
            }
        </div>
    </div>
</div>
