    };
}

<style>
    /* Fade-in animation for the container */
    .fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Hover effect for experience rows */
    .experience-row {
        transition: background-color 0.3s ease, transform 0.2s ease;
        padding: 15px;
        border-bottom: 1px solid #dee2e6;
    }

        .experience-row:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
        }

    /* Mimic PDF styling: bold headings, subtle icons */
    .company-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .role {
        font-style: italic;
        color: #6c757d;
    }

    ul {
        list-style-type: none;
        padding-left: 0;
    }

    li {
        margin-bottom: 5px;
    }

    /* Ensure left-to-right direction for skills line */
    .skills-line {
        direction: ltr;
        text-align: left;
    }
</style>

<div class="container h-100 d-flex flex-column justify-content-start align-items-center text-center fade-in" style="padding: 10px; font-size: 0.85rem; overflow-y: auto; max-height: 80vh;">
    <h1 class="fw-bold mb-3">Works</h1>
    <div class="w-100">
        @foreach (var exp in experiences)
        {
            <div class="experience-row">
                <div class="company-header">
                    <span>@exp.Company</span>
                    <span>@exp.Dates</span>
                </div>
                <p class="role mb-2">@exp.Role</p>

                <h6 class="text-start fw-bold mb-1">Achievements:</h6>
                <ul>
                    @foreach (var achievement in exp.Achievements)
                    {
                        <li><i class="bi bi-check-circle-fill text-success me-1"></i>@achievement</li>
                    }
                </ul>

                <h6 class="text-start fw-bold mb-1">Jobs:</h6>
                <ul>
                    @foreach (var job in exp.Jobs)
                    {
                        <li><i class="bi bi-briefcase-fill text-primary me-1"></i>@job</li>
                    }
                </ul>

                <h6 class="text-start fw-bold mb-1">Skills:</h6>
                <p class="skills-line"><i class="bi bi-gear-fill text-info me-1"></i>@string.Join(", ", exp.Skills)</p>

                <h6 class="text-start fw-bold mb-1">Related Project:</h6>
                <p class="text-start"><i class="bi bi-code-slash text-primary me-1"></i>@exp.RelatedProject</p>
            </div>
        }
    </div>
</div>
