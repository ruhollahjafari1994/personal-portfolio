<!DOCTYPE html>
<html lang="en" class="light-mode">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ruhollah Jafari - Software Engineer Portfolio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column flex-md-row" style="height: 100vh; overflow: hidden;">
        <!-- Left Sidebar (Persistent Profile, Always Visible, No Scroll, Full Text) -->
        <aside class="sidebar bg-light p-3 d-flex flex-column align-items-center text-center fade-in" style="width: 100%; max-width: 300px; height: 100%; overflow: hidden;">
            <img src="~/images/profile image.png" alt="Profile Picture (Formal)" class="img-fluid rounded-circle mb-3" style="max-width: 150px;" /> <!-- Restored formal photo -->
            <h4 class="fw-bold">Ruhollah Jafari</h4>
            <p>Software Engineer</p>
            <div class="mb-3 icon-container">
                <i class="bi bi-link-45deg fs-4 mx-1 icon-bounce"></i>
                <i class="bi bi-briefcase fs-4 mx-1 icon-bounce"></i>
                <i class="bi bi-envelope fs-4 mx-1 icon-bounce"></i>
                <i class="bi bi-twitter fs-4 mx-1 icon-bounce"></i>
            </div>
            <p><strong>Date of birth:</strong> 1372/12/13</p>
            <p><strong>Residence:</strong> Tehran</p>
            <p><strong>Experience:</strong> 7+ Years</p>
            <p><strong>Freelance:</strong> Available</p>
            <h5>Skills</h5>
            <ul class="list-unstyled text-start" style="font-size: 0.9rem; line-height: 1.2; overflow: hidden;">
                <!-- Fixed: Smaller font, no max-height, full text fits -->
                <li>C# and .NET</li>
                <li>Microservices Architecture Design</li>
                <li>Entity Framework Core</li>
                <li>SQL and T-SQL</li>
                <li>Architectural Pattern Design</li>
                <li>Test-Driven Development (TDD)</li>
            </ul>
            <p style="font-size: 0.9rem;"><strong>Languages:</strong> English: B2</p>
        </aside>

        <!-- Main Content Area (No Scroll) -->
        <div class="main-content flex-grow-1 d-flex flex-column" style="overflow: hidden;">
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" href="/">Ruhollah Jafari</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/Resume">Resume</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/Works">Works</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/About">About</a></li>
                            <li class="nav-item"><a class="nav-link" asp-page="/Contact">Contact</a></li>
                            <li class="nav-item">
                                <button id="darkModeToggle" class="btn btn-outline-secondary ms-2"><i class="bi bi-moon-stars"></i> Dark Mode</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <main class="flex-grow-1 p-3 yellow-bg fade-in" style="overflow: hidden;">
                @RenderBody()
            </main>   
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
